<Window x:Class="Personeel.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personeel.WPF"
        mc:Ignorable="d"
        Title="Personeel" Height="500" Width="400">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Beoordeling">
                <MenuItem Header="Verhogen" Click="OnIncreaseScore_Clicked"/>
                <MenuItem Header="Verlagen" Click="OnDecreaseScore_Clicked"/>
            </MenuItem>
        </Menu>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Voornaam: " Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <Label Content="Achternaam: " Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <Label Content="Startjaar: " Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <Label Content="Geslacht: " Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>

            <TextBox Grid.Row="0" Grid.Column="1" x:Name="firstNameTextBox" Margin="10" Padding="5" LostFocus="OnInput_LostFocus"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="lastNameTextBox" Margin="10" Padding="5" LostFocus="OnInput_LostFocus"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="startYearTextBox" Margin="10" Padding="5" LostFocus="OnInput_LostFocus"/>
            <ComboBox Grid.Row="3" Grid.Column="1" x:Name="sexComboBox" Margin="10" Padding="5"  LostFocus="OnInput_LostFocus">
                <ComboBoxItem Content="M" IsSelected="True"/>
                <ComboBoxItem Content="F"/>
                <ComboBoxItem Content="X"/>
            </ComboBox>

            <TextBox Grid.Row="4" Grid.ColumnSpan="2" Margin="10" Padding="5"
                     x:Name="resultTextBox" FontFamily="Lucida Console" FontSize="14" IsEnabled="False"/>
        </Grid>
    </DockPanel>

</Window>
